{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*"
  ]
}
